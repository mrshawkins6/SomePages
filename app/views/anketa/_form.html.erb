<%= form_for(@anketum) do |f| %>
  <% if @anketum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@anketum.errors.count, "error") %> prohibited this anketum from being saved:</h2>

      <ul>
      <% @anketum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :notebook_id %>
  <div class="field">
    <%= f.text_field :title %>
  </div>

  <b>Твои вопросы:</b><br />
	  <%= f.fields_for :questions do |q| %>
	    <div class="field">
		 Вопрос: <%= q.text_field :title %><br />
		 <label><%= q.radio_button :variant, '0' %> Сообщение</label>
		 <label><%= q.radio_button :variant, '1' %> Выбор</label>
		 <label><%= q.radio_button :variant, '2' %> Мультивыбор</label><br/>
		 
		 <%= q.text_field :body %>
		</div>
	  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
